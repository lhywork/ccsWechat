<!--新增收货地址-->
  <view class="container">
    <view class='page-main'>
        <view class='new-main'>
            <input class='new-name' type='text' placeholder='收货人姓名'></input>
            <input class='new-number' type='number' placeholder='手机号码'></input>
            <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
                <view class='new-address clearfix'>
                     <view class="new-Provinces">{{region[0]}}-{{region[1]}}-{{region[2]}}</view>
                     <view class="new-symbol">》</view>
                </view>
            </picker>
            <input class='new-street' type='text' placeholder='街道'></input>
            <input class='new-email' type='text' placeholder='邮政编码'></input>
            <textarea class='new-detailed' type='text' placeholder='详细地址' ></textarea>
        </view>
    </view>
    <view class='page-bottom'>
        <button class="page-save">保存</button>
    </view>
  </view> 

